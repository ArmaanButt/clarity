<div class="text-center">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: "form-horizontal"}) do |f| %>
  <fieldset>
      <%= f.error_notification %>
      <legend>Sign Up</legend>
      <div class="form-group">
          <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3">
              <%= f.input :email, required: true, autofocus: true, label: false, :input_html => {:class => "form-control", :placeholder => "Email" }%>
          </div>
      </div>
      <div class="form-group">
          <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3">
              <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: false, :input_html => {:class => "form-control", :placeholder => "Password" } %>
          </div>
      </div>
      <div class="form-group">
          <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3">
              <%= f.input :password_confirmation, required: true, label: false, :input_html => {:class => "form-control", :placeholder => "Password Confirmation" } %>
          </div>
      </div>
      <div class="form-group">
          <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3">
              <input type="submit" name="commit" value="Sign up" class="btn btn-primary">
          </div>
      </div>
  </fieldset>
  <% end %>
</div>
