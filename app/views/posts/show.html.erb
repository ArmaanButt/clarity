<div class="form-horizontal">
  <fieldset>
    <legend><%= @post.title %></legend>
    <div class="form-group">
      <div class="col-lg-12 col-md-12">
          <p class="text-muted">
            Posted @ <%= @post.created_at %>
          </p>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-12 col-md-12">
          <p class="lead">
            <%= @post.body %>
          </p>
      </div>
    </div>
  </fieldset>
</div>

<p>
  <%= commontator_thread(@post) %>
</p>
