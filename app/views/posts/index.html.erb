<% if !params.has_key?(:course) %>
<div class="text-center">
  <h2>Page does not exist</h2>
</div>
<% end %>

<% if params.has_key?(:course) %>
<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h3>Discussion Board</h3>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <ul class="list-group">
            <a href="/posts/new?course=4317" class="btn btn-primary">Create Post</a>
            <% @posts.each do |post| %>
            <li class="list-group-item"><%= link_to(post.title, post) %></li>
            <% end %>
        </ul>
    </div>
</div>
<% end %>
