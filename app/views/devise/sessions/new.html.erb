<div class="text-center">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "form-horizontal"}) do |f| %>
  <fieldset>
      <legend>
          Log In
      </legend>
      <div class="form-group">
          <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3">
              <%= f.input :email, required: false, autofocus: true,  label: false, :input_html => {:class => "form-control", :placeholder => "Email" }%>
          </div>
      </div>

      <div class="form-group">
          <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3">
              <%= f.input :password, required: false,  label: false, :input_html => {:class => "form-control", :placeholder => "Password" } %>
              <div class="checkbox">
                  <label>
                     <input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me"> Remember Me
                  </label>
              </div>
          </div>
      </div>

      <div class="form-group">
          <div class="col-lg-6 col-md-6 col-lg-offset-3 col-md-offset-3">
              <input type="submit" name="commit" value="Log in" class="btn btn-primary">
          </div>
      </div>
  </fieldset>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
