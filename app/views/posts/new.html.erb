<% if current_user and params.has_key?(:course) and current_user.courses.exists?(params[:course]) %>
<%= simple_form_for(@post, :html => {class: "form-horizontal"})  do |f| %>
<fieldset>
    <legend>
        New Post
    </legend>
    <div class="form-group">
        <div class="col-lg-12 col-md-12">
            <%= f.input :title, label: 'Title', error: 'Title is mandatory, please specify one', label: false, :input_html => {:class => "form-control", :placeholder => "Title"} %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-12 col-md-12">
            <%= f.input :body, label: 'Body', label: false, :input_html => {:class => "form-control", :placeholder => "Body"} %>
        </div>
    </div>
    <%= f.hidden_field :course_id, value: params[:course] %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit "Post", :class => "btn btn-primary"%>
</fieldset>
<% end %>
<% elsif current_user and !params.has_key?(:course) %>
<h2>An error has occured</h2>
<%elsif current_user%>
<h2>You must be enrolled in a course to make a new post</h2>
<%else%>
<h2>You must be logged in to make a post</h2>
<% end %>
